`$recv.$method($sel)` as $node where {
  $filename <: r".*(?:/__tests__/|\\__tests__\\|/tests/|\\tests\\|\\.test\\.|\\.spec\\.).*",
  $method <: `querySelector`,
  register_diagnostic($method, message="[test/no-queryselector] Avoid CSS selectors in tests; prefer a11y queries (ByRole/Label/Placeholder/Alt/Title).")
}
